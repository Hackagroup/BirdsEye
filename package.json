{
  "name": "twittive",
  "version": "1.0.0",
  "description": "Twitter for Motivation",
  "main": "server.js",
  "dependencies": {
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv-safe": "^8.2.0",
    "express": "^4.17.1",
    "gatsby-cli": "^2.14.0",
    "request": "^2.88.2",
    "twitter": "^1.7.1",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "concurrently": "^5.3.0",
    "coveralls": "^3.1.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.6",
    "prettier": "^2.1.2"
  },
  "scripts": {
    "client:install":"cd client && npm install && cd ../",
    "test": "jest",
    "test:watch":"jest --watch",
    "test:coverage":"jest --coverage",
    "test:coveralls": "jest --coverage && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "start": "concurrently \"npm run server\" \"npm run client\"",
    "lint": "npx prettier --write ."
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Hackagroup/Twitive.git"
  },
  "author": "Amanuel Bogale, Abakir Hanna, Lindsey Reynolds, Ajay Dabas, Punita Verma",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Hackagroup/Twitive/issues"
  },
  "homepage": "https://github.com/Hackagroup/Twitive#readme"
}
